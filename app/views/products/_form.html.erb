<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :logo %>
    <%= f.input :name %>
    <%= cktext_area :product, :body, :cols => 40, :ckeditor => {:toolbar => "mini"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
